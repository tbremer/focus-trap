{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"declaration": true,
		"declarationDir": "dist/types",
		"outDir": "dist/esm",
		"rootDir": "src",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"isolatedModules": false,
		"jsx": "react-jsx",
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
}
